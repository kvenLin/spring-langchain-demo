<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.louye.springlangchaindemo.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.louye.springlangchaindemo.domain.User">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="email" column="email" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,
        email
    </sql>
    <select id="selectTableDDL" resultType="java.util.Map">
        show create table ${tableName};
    </select>
    <select id="maxIdForTable" resultType="java.lang.Integer">
            select ifnull(max(id), 1) from ${tableName};
    </select>
</mapper>
